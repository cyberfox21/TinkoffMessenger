<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/padding10dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <TextView
        android:id="@+id/tv_channel_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/margin10dp"
        android:layout_weight="5"
        android:textColor="#FAFAFA"
        android:textSize="@dimen/textSize20sp"
        tools:text="TextView" />

    <ImageView
        android:id="@+id/iv_expand_channel"
        android:layout_width="@dimen/channel_arrow_dimension"
        android:layout_height="@dimen/channel_arrow_dimension"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        app:srcCompat="@drawable/ic_unselected_channel"
        android:contentDescription="@string/expand_channel_to_see_topics" />
</LinearLayout>
