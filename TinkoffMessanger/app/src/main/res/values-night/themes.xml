<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.TinkoffMessanger" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/green</item>
        <item name="colorSecondaryVariant">@color/green</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">
            @color/bottom_navigation_background
        </item>
        <item name="android:navigationBarColor" tools:targetApi="l">
            @color/bottom_navigation_background
        </item>
        <item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialog</item>
    </style>


    <style name="ThemeOverlay.App.BottomNavigationView" parent="Theme.MaterialComponents">
        <item name="android:background">@color/bottom_navigation_background</item>
        <item name="colorPrimary">@color/white</item>
    </style>

    <style name="Theme.SearchView" parent="Theme.MaterialComponents">
        <item name="android:background">@color/bottom_navigation_background</item>
        <item name="queryBackground">@null</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="searchIcon">@null</item>
        <item name="android:textColor">@color/white</item>
        <item name="searchHintIcon">@null</item>
        <item name="queryHint">@string/example_channels_search_hint</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="Theme.BtnLogout" parent="Theme.MaterialComponents">
        <item name="colorPrimary">@color/btn_logout_bg</item>
    </style>

    <style name="Theme.ImageProfile" parent="Theme.MaterialComponents">
        <item name="background">@color/btn_logout_bg</item>
    </style>

    <style name="Theme.TabLayout" parent="Theme.MaterialComponents">
        <item name="itemBackground">@color/bottom_navigation_background</item>
        <item name="tabIndicatorColor">@color/green</item>
    </style>

    <style name="Theme.MyMessage" parent="Theme.MaterialComponents">
        <item name="android:background">@drawable/my_message_bg</item>
    </style>

    <style name="Theme.TextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TransparentBg">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="CustomBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/btn_logout_corner_radius</item>
        <item name="cornerSizeTopLeft">@dimen/btn_logout_corner_radius</item>
    </style>

    <style name="CustomAlertDialogStyle" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:background">@color/background</item>
    </style>

    <style name="BottomSheetItemsStyle">
        <item name="android:padding">@dimen/padding20dp</item>
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:textSize">@dimen/textSize16sp</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
